<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExcerciseFragment">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="756dp"
        android:layout_height="550dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tool_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textViewDate"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate" />

    <ImageView
        android:id="@+id/historyBtn"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="363dp"
        android:layout_height="195dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_border_running"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName">

        <ca.antonious.materialdaypicker.MaterialDayPicker
            android:id="@+id/day_picker"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectionMode="ca.antonious.materialdaypicker.SingleSelectionMode" />

        <ImageView
            android:id="@+id/imageFood"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/run"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgWater"
            app:layout_constraintTop_toBottomOf="@+id/day_picker" />

        <TextView
            android:id="@+id/textViewCalo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#373737"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/imageFood"
            app:layout_constraintHorizontal_bias="0.434"
            app:layout_constraintStart_toStartOf="@+id/imageFood"
            app:layout_constraintTop_toBottomOf="@+id/imageFood" />

        <ImageView
            android:id="@+id/imgWater"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/day_picker" />

        <ImageView
            android:id="@+id/imgPeriod"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/calo"
            app:layout_constraintEnd_toStartOf="@+id/imgWater"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/day_picker" />

        <TextView
            android:id="@+id/textViewKalosUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#373737"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/imgPeriod"
            app:layout_constraintStart_toStartOf="@+id/imgPeriod"
            app:layout_constraintTop_toBottomOf="@+id/imgPeriod" />

        <TextView
            android:id="@+id/textViewWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#373737"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgWater" />

        <TextView
            android:id="@+id/tvInformationHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-thin"
            android:text="Kcal"
            android:textColor="#070707"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/imgPeriod"
            app:layout_constraintStart_toStartOf="@+id/imgPeriod"
            app:layout_constraintTop_toBottomOf="@+id/textViewKalosUse" />

        <TextView
            android:id="@+id/textViewTimeUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-thin"
            android:text="Giờ"
            android:textColor="#070707"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/imgWater"
            app:layout_constraintStart_toStartOf="@+id/imgWater"
            app:layout_constraintTop_toBottomOf="@+id/textViewWater" />

        <TextView
            android:id="@+id/tvInformationSubHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-thin"
            android:text="Bước chân"
            android:textColor="#070707"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/imageFood"
            app:layout_constraintStart_toStartOf="@+id/imageFood"
            app:layout_constraintTop_toBottomOf="@+id/textViewCalo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="279dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="59dp"
            android:layout_height="54dp"
            android:src="@drawable/firefit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Chuỗi 0 Firefit days."
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/imageView14"
            app:layout_constraintTop_toTopOf="@+id/imageView14" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Luyện tập chăm chỉ để nhận Firefit Days."
            android:textColor="#F8F8F8"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView14"
            app:layout_constraintTop_toBottomOf="@+id/textViewStreak" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_height="260dp"
        android:background="@drawable/round_border_recyclerview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-black"
            android:text="Luyện tập cùng FireFit"
            android:textColor="#040303"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Spinner
            android:id="@+id/lvListExercise"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:background="@drawable/round_border_input_text"
            android:hint="Chọn bài tập"
            android:inputType="textCapWords"
            android:padding="15px"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView46" />

        <ImageButton
            android:id="@+id/imgStart"
            android:layout_width="153dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:background="#fff"
            android:src="@drawable/start_button_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="BẮT ĐẦU"
            android:textColor="#FFFEFE"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgStart"
            app:layout_constraintEnd_toEndOf="@+id/imgStart"
            app:layout_constraintStart_toStartOf="@+id/imgStart"
            app:layout_constraintTop_toTopOf="@+id/imgStart" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/triangle"
            app:layout_constraintBottom_toBottomOf="@+id/lvListExercise"
            app:layout_constraintEnd_toEndOf="@+id/lvListExercise"
            app:layout_constraintTop_toTopOf="@+id/lvListExercise"
            app:layout_constraintVertical_bias="0.533" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Chọn bài tập và bắt đầu"
            android:textColor="#3F51B5"
            app:layout_constraintEnd_toEndOf="@+id/lvListExercise"
            app:layout_constraintStart_toStartOf="@+id/lvListExercise"
            app:layout_constraintTop_toBottomOf="@+id/lvListExercise" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Lịch sử"
        android:textColor="#FDFDFD"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/historyBtn"
        app:layout_constraintTop_toBottomOf="@+id/historyBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>