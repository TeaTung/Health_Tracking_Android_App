<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/push_up_background"
    tools:context=".RequestPermission">

    <ImageButton
        android:id="@+id/imgStop"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:background="#fff"
        android:src="@drawable/start_button_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pgbAwardEx" />

    <TextView
        android:id="@+id/tvStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="DỪNG TẬP"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgStop"
        app:layout_constraintEnd_toEndOf="@+id/imgStop"
        app:layout_constraintStart_toStartOf="@+id/imgStop"
        app:layout_constraintTop_toTopOf="@+id/imgStop" />

    <TextView
        android:id="@+id/tvCountTime"
        android:layout_width="63dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-light"
        android:text="0 Lần"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView54" />

    <TextView
        android:id="@+id/tvTopicDoingEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="ĐANG HÍT ĐẤT..."
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgDoingEx"
        android:layout_width="286dp"
        android:layout_height="275dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTopicDoingEx"
        app:srcCompat="@drawable/pushup" />

    <TextView
        android:id="@+id/tvTimeRecordDoingEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:fontFamily="sans-serif-black"
        android:text="00:00:00"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/pgbAwardEx"
        app:layout_constraintStart_toStartOf="@+id/pgbAwardEx"
        app:layout_constraintTop_toBottomOf="@+id/imgDoingEx" />

    <ProgressBar
        android:id="@+id/pgbAwardEx"
        style="?android:attr/progressBarStyle"
        android:layout_width="174dp"
        android:layout_height="149dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:indeterminateOnly="false"
        android:progress="0"
        android:progressDrawable="@drawable/circle_progress_step"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeRecordDoingEx" />

    <TextView
        android:id="@+id/tvFireFit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="FireFit Day"
        android:visibility="visible"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/pgbAwardEx"
        app:layout_constraintEnd_toEndOf="@+id/pgbAwardEx"
        app:layout_constraintStart_toStartOf="@+id/pgbAwardEx"
        app:layout_constraintTop_toTopOf="@+id/pgbAwardEx" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="Kalos đã đốt:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeRecordDoingEx" />

    <TextView
        android:id="@+id/tvRecordKalos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="0 Kalories"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView31"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Số lần:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tvRecordKalos"
        app:layout_constraintTop_toBottomOf="@+id/tvRecordKalos" />

    <EditText
        android:id="@+id/edtTimeCount"
        android:layout_width="102dp"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/round_border_input_text"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:inputType="number"
        android:padding="6dp"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/imgStop"
        app:layout_constraintEnd_toStartOf="@+id/pgbAwardEx"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCountTime"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edtCalories"
        android:layout_width="102dp"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/round_border_input_text"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:inputType="number"
        android:padding="6dp"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView54"
        app:layout_constraintEnd_toStartOf="@+id/pgbAwardEx"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvRecordKalos"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imgCancel"
        android:layout_width="71dp"
        android:layout_height="49dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973"
        app:srcCompat="@drawable/start_button_shape" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>